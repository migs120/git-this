<h1 style="color: lightgrey"><%= @scategory.main_category.title %></h1>
<h2><%=@scategory.title%></h2>
  <%if current_user%>
        <% if current_user %>
            <p><button><%=link_to "Post Item Here", new_sub_category_item_path(@scategory.id)%></button></p>
        <%end%>
  <%end%>
<% @scategory.items.each do |item|%>
<p style="color:red;">
  <% if item.item_pics.length >= 1 %>
    <img src="<%= item.item_pics.last.avatar.url %>"  width="42" height="42">
  <%# item.item_pics.length %>
  <%end%>
  <%=link_to item.name, sub_category_item_path( @scategory.id, item.id )  %>
</p>

<% end%>
